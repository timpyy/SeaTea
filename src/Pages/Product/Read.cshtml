@page "{id}"   //this is how values are passed among pages.
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.ReadModel

@{
    ViewData["Title"] = "Read page";
}


<h1>@Model.Product.Title</h1>
<!-- Here we created the product description which has a title, image and breif description-->
<div class="content read-div col">
    <img class="read-card-img" src='@Model.Product.Image' alt='Image for @Model.Product.Title'>

    <table class="table table-bordered table-striped">
        <tr>
            <td>Address:</td>
            <td>@Model.Product.Description</td>
        </tr>
        <tr>
            <td>Store Phone:</td>
            <td>@Model.Product.Phone</td>
        </tr>
        <tr>
            <td>URL:</td>
            <td><a href="@Model.Product.Url" target="_blank" rel="noopener nofollow">@Model.Product.Url</a></td>
        </tr>
        <tr>
            <td>Menu:</td>
            <td><a href="@Model.Product.OnlineMenuLink" target="_blank"rel="noopener nofollow">Live Menu</a></td>
        </tr>
    </table>
    <!--Adds comments section to read page with style.-->
    <p><h4 class="SeaTea-Comment">Comments <i class="fa fa-comment "></i></h4></p>
    <ul class="list-group border border-success rounded comment-a" >
        @{
            if (Model.Product.CommentList.Count > 0)
            {
                foreach (var comment in Model.Product.CommentList)
                {
                    <li class="list-group-item rounded border border-info comment-b">
                    <i class="fa fa-user"></i>
                        @comment.Comment
                    </li>

                }
            }
            else
            {
                <p>There are no comments for @Model.Product.Title, Keep exploring!</p>
            }
        }
    </ul>
    <div style="padding-top: 50px;">
        <a asp-page="Update" asp-route-id="@Model.Product.Id" class="btn btn-primary"><i class="fa fa-pencil"></i>Update Store</a> &nbsp; &nbsp;
        <a asp-page="Delete" asp-route-id="@Model.Product.Id" class="btn btn-danger"><i class="fa fa-trash"></i>Delete Store</a>
    </div>
</div>

<br />
